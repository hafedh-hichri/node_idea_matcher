<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <title>Document</title>
</head>

<body>
    <form action="/" method="get">
        <button style="position: relative;left: 80%;"class="btn btn-primary">>original</button>
    </form>

    <br><br>



    <div style="display: block;width : 50%; margin-left:25%;" align="center" name="block_div">
        <form action="/manual" method="post">
            <!-- title -->
            <label for="search" class="form-label">
                <h3>title</h3>
            </label>
            <input name='Title' type="text" id='Title' class="form-control">
            <!-- keywords -->
            <label for="keywords" class="form-label">
                <h3>keywords</h3>
            </label>
            <input name='Key words' type="text" id='Key words' class="form-control">
            <br>
            <!-- sectors -->
            <label for="Sectors" class="form-label">
                <h3>Sectors</h3>
            </label>
            <input name='Sector' type="text" id='Sector' class="form-control">
            <br><br>
            <!-- Type -->
            <label for="Type" class="form-label">
                <h3>Type</h3>
            </label>
            <input name='Type' type="text" id='Type' class="form-control">
            <br><br>
            <!-- Problem/Opportunity -->
            <label for="Problem/Opportunity" class="form-label">
                <h3>Problem/Opportunity</h3>
            </label>
            <input name='Problem/Opportunity' type="text" id='Problem/Opportunity' class="form-control">
            <br><br>
            <!-- Description -->
            <label for="Description" class="form-label">
                <h3>Description</h3>
            </label>
            <input name='Description' type="text" id='Description' class="form-control">
            <br><br>
            <!-- Added Value -->
            <label for="Added Value" class="form-label">
                <h3>Added Value</h3>
            </label>
            <input name='Added Value' type="text" id='Added Value' class="form-control">
            <br><br>
            <!-- Impact -->
            <label for="Impact" class="form-label">
                <h3>Impact</h3>
            </label>
            <input name='Impact' type="text" id='Impact' class="form-control">
            <br><br>







            <!-- beta -->
            <button class="btn btn-success">search</button>

        </form>

    </div>

    <hr><br>
    <!-- comparison -->
    <% if (locals.new_data) { %>

        <!-- output data -->
        <br>
        <h3>most similar data : </h3>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">column</th>
                    <th scope="col">similar value</th>
                    <th scope="col">original value</th>
                </tr>
            </thead>
            <% for( let column in locals.out ) { %>
                <tr>
                    <td>
                        <%= column %>
                    </td>
                    <td>
                        <%= locals.out[column] %>
                    </td>
                    <td>
                        <%= locals.new_data[column] %>
                    </td>
                </tr>

                <% } %>

        </table>

        <% } %>




</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
    crossorigin="anonymous"></script>

</html>