<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  <title>Document</title>
</head>

<body>
  <form action="/manual" method="get">
    <button style="position: relative;left: 80%;" class="btn btn-primary">>manual inputs</button>
  </form>
  
  <br><br>



  <div style="display: block;width : 50%; margin-left:25%" align="center" name="block_div">
    <form action="/" method="post">
      <!-- title -->
      <label for="search" class="form-label">
        <h1>title</h1>
      </label>
      <input name='Title' type="text" id='Title' class="form-control">
      <!-- keywords -->
      <label for="keywords" class="form-label">
        <h1>keywords</h1>
      </label>
      <select name="Key words" id="Key words" class="form-select form-select-lg mb-3">
        <option value="major league baseball">major league baseball</option>
        <option value="equipments">equipments</option>
      </select>
      <br>

      <!-- sectors -->
      <label for="Sectors" class="form-label">
        <h1>Sectors</h1>
      </label>
      <select name='Sector' id='Sector' class="form-select form-select-lg mb-3">
        <option value="fix printer">fix printer</option>
        <option value="web design">web design</option>
        <option value="marketing">marketing</option>
        <option value="financial">financial</option>
      </select>

      <br><br>

      <!-- beta -->
      <button type="submit" class="btn btn-success">search</button>

    </form>

  </div>

  <hr><br>
  <!-- comparison -->
  <% if (locals.new_data) { %>
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Title</th>
          <th scope="col">Key words</th>
          <th scope="col">Sector</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row">Original</th>
          <td><%= locals.new_data['Title'] %></td>
          <td><%= locals.new_data['Key words'] %></td>
          <td><%= locals.new_data['Sector'] %></td>
        </tr>
        <tr>
          <th scope="row">similar</th>
          <td><%= locals.out['Title'] %></td>
          <td><%= locals.out['Key words'] %></td>
          <td></td>
        </tr>
      </tbody>
    </table>

  
    
    <!-- output data -->
    <br>
    <h3>most similar data : </h3>

    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">column</th>
          <th scope="col">value</th>
        </tr>
      </thead>
      <% for( let column in locals.out ) { %>
        <tr>
          <td><%= column %></td>
          <td><%= locals.out[column] %></td>
        </tr>
      
        <% } %>
      
    </table>

      <% } %>
    



</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

</html>